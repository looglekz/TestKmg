@using TestKmg.Common.ViewModels.Product
@model AddProductViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<form action="/Product/AddProduct" method="post">
    <div class="form-group">
        <label>Категория</label>
        <select name="GroupId" id="groupId"  class="form-control"  onchange="window.location.href='/Product/AddProduct?groupId='+$('#groupId').val()" 
                asp-for="GroupId" 
            asp-items="@(new SelectList(Model.Groups,"Id","NameRus"))">
            <option value="">Выберите категорию</option>
        </select>
    </div>
    <div class="form-group">
        <label>Доп.поля</label>
      @if (Model.GroupFields != null)
      {
            @foreach (var field in Model.GroupFields)
            {
                <label>@field.Name</label>
                <input type="text"   class="form-control" name="Fields[@field.Id]" />
            }
      }
    </div>
    <div class="form-group">
        <label>Наименование на русском</label>
        <input type="text" name="NameRus" class="form-control" />
    </div>
    <div class="form-group">
        <label>Наименование на казахском</label>
        <input type="text" name="NameKaz" class="form-control" />
    </div>
    <div class="form-group">
        <label>Описание на русском</label>
        <input type="text" name="DescriptionRus" class="form-control" />
    </div>
    <div class="form-group">
        <label>Описание на казахском</label>
        <input type="text" name="DescriptionKaz" class="form-control" />
    </div>
    <div class="form-group">
        <label>Цена</label>
        <input type="text" name="Price" class="form-control" />
    </div>
    <input type="submit" class="btn btn-primary" value="Добавить" />
</form>